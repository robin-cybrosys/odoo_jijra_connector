<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="jira_connector_wizard" model="ir.ui.view">
            <field name="name">Jira Popup</field>
            <field name="model">odoo.jira.connector</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-md-6 o_setting_box mb-4">
                                <h4>Import Projects and Related Data</h4>
                                <div class="mt-4 mb-2">
                                    <button class="oe_highlight mr-2"
                                            name="import_p_managers"
                                            type="object"
                                            string="Import Project Managers"/>

                                    <button class="oe_highlight ml-3 mr-5"
                                            name="import_project"
                                            type="object"
                                            string="Import Projects"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box mb-4">
                                <h4>Import Tasks and Related Data</h4>
                                <div class="mt-4 mb-2">
                                    <button class="oe_highlight mr-5"
                                            name="import_issues"
                                            type="object"
                                            string="Import Tasks"/>
                                </div>
                            </div>
                        </div>
                    </sheet>
                    <footer>
                        <!--Buttons-->
                        <button string="Cancel" special="cancel"
                                class="oe_highlight"
                                type="object" data-hotkey="q"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
